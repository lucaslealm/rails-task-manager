<h1><%= @task.title %></h1>
<br>
<h2><%= @task.details %></h2>
<br>
<% if @task.completed %>
  <p><i class="far fa-check-circle"></i><%= "  This task is completed" %></p>
  <% else %>
  <p><i class="far fa-circle"></i><%= "  This task is not completed yet" %></p>
<% end %>
<br>
<%= link_to "Edit Task!", edit_path(@task) , class: 'btn btn-primary' %>
<br>
<br>
<%= link_to "Delete Task", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this task?" } , class: 'btn btn-primary' %>
<br>
<br>
<%= link_to "Back to Homepage", tasks_path , class: 'btn btn-primary' %>
