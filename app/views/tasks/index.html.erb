<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
    <% if task.completed %>
      <li><i class="far fa-check-circle"></i><%= link_to "  #{task.title}", task_path(task) %></li>
    <% else %>
      <li><i class="far fa-circle"></i><%= link_to "  #{task.title}", task_path(task) %></li>
    <% end %>
  <% end %>
</ul>
<%= link_to "Create New Task", tasks_new_path , class: 'btn btn-primary'%>
